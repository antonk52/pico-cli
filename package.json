{
  "name": "pico-cli",
  "version": "0.1.0",
  "description": "Typescript first / zero dependencies CLI framework",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:coverage": "vitest --run --coverage",
    "format:check": "prettier -c ./src/*.ts ./test/*.ts",
    "format:fix": "prettier -w ./src/*.ts ./test/*.ts"
  },
  "keywords": ["cli", "typescript", "zero-dependencies"],
  "repository": {
      "type": "git",
      "url": "https://github.com/antonk52/pico-cli"
  },
  "bugs": "https://github.com/antonk52/pico-cli/issues",
  "author": "anotnk52",
  "license": "MIT",
  "files": [
    "dist/*"
  ],
  "devDependencies": {
    "@types/node": "^20.3.1",
    "@vitest/coverage-v8": "^0.32.0",
    "prettier": "^2.8.8",
    "typescript": "^5.1.3",
    "vitest": "^0.32.0"
  }
}
