{
  "name": "pico-cli",
  "version": "0.1.1",
  "description": "Typescript first / zero dependencies CLI framework",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:coverage": "vitest --run --coverage",
    "format:check": "prettier -c ./src/*.ts ./test/*.ts",
    "format:fix": "prettier -w ./src/*.ts ./test/*.ts"
  },
  "keywords": [
    "cli",
    "typescript",
    "zero-dependencies"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/antonk52/pico-cli"
  },
  "bugs": "https://github.com/antonk52/pico-cli/issues",
  "author": "anotnk52",
  "license": "MIT",
  "files": [
    "dist/*"
  ],
  "devDependencies": {
    "@types/node": "^20.3.1",
    "@vitest/coverage-v8": "^0.34.4",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2",
    "vitest": "^0.34.4"
  }
}
